<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ListView?>

<BorderPane fx:id = "root" xmlns:fx="http://javafx.com/fxml/1" fx:controller = "myController">
	<top>
		<HBox alignment="CENTER">
			<Text fx:id = "title" text ="Server Options:" textAlignment="CENTER"/>
		</HBox>
	</top>
	<center>
		<VBox fx:id = "options" alignment="CENTER">
			<Text fx:id = "sPort" text = "Enter the Port Number: "/>
			<TextField fx:id = "tfPort" promptText = "Port Number"/>
			<Button fx:id = "bTurnOnServer" text = "Power On" onAction="#turnOnServer"/>
		</VBox>
	</center>
</BorderPane>

